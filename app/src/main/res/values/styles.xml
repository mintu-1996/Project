<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:textColorHint">@color/hint</item>

    </style>

    <style name="username">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="password">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="btn">
        <item name="android:layout_width">150sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="btn_login">
        <item name="android:layout_width">300sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="inner_linear">
        <item name="android:gravity">center</item>
        <!--<item name="android:background">@drawable/layout</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="linear">
        <item name="android:gravity">center</item>
        <!--<item name="android:background">@drawable/layout</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#f7f756</item>
    </style>
    <style name="radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/global</item>
    </style>
    <style name="fb_login_design">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">156dp</item>
        <!--<item name="android:layout_marginLeft">20dp</item>-->
        <item name="android:gravity">center</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
    </style>
    <style name="logo_design">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">70dp</item>
        <!--<item name="android:layout_marginLeft">20dp</item>-->
        <item name="android:gravity">center</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
    </style>
    <style name="google_login_design">
        <!--<item name="android:layout_marginRight">10dp</item>-->
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">156dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <item name="android:gravity">center</item>
    </style>
    <style name="login_design">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="text_design">
    <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_margin">10dp</item>
</style>
    <style name="text_forgot">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
    </style>
</resources>
